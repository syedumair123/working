<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >

    <TextView
        android:id="@+id/text_One"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:fontFamily="@font/segoeuiregular"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:layout_marginTop="@dimen/_41sdp"
        android:text="To register your Masjid please complete the following details:"/>


    <android.support.v7.widget.CardView
        android:id="@+id/MasjidCard_Name_"
        android:layout_marginTop="@dimen/_47sdp"
        android:layout_width="@dimen/_300sdp"
        android:layout_below="@id/text_One"
        android:layout_height="@dimen/_49sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginRight="@dimen/_11sdp"
        app:cardElevation="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/EDT_MasajidName_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeuiregular"
                android:textSize="@dimen/_14sdp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Masjid Name"
                android:textStyle="normal"
                android:drawablePadding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:drawableLeft="@drawable/mosque"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>






    <android.support.v7.widget.CardView
        android:id="@+id/Card_YourName_"

        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="@dimen/_300sdp"
        android:layout_below="@id/MasjidCard_Name_"
        android:layout_height="@dimen/_49sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginRight="@dimen/_11sdp"
        app:cardElevation="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/EDT_YourName_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeuiregular"
                android:textSize="@dimen/_14sdp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Your Name"
                android:textStyle="normal"
                android:drawablePadding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:drawableLeft="@drawable/user"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>







    <android.support.v7.widget.CardView
        android:id="@+id/Card_Contact_"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="@dimen/_300sdp"
        android:layout_below="@id/Card_YourName_"
        android:layout_height="@dimen/_49sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginRight="@dimen/_11sdp"
        app:cardElevation="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/EDT_Contact_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/segoeuiregular"
                android:textSize="@dimen/_14sdp"
                android:textColorHint="@color/colorPrimary"
                android:hint="Contact"
                android:textStyle="normal"
                android:drawablePadding="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:drawableLeft="@drawable/user"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>







    <Button
        android:id="@+id/BTN_Submit_"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_59sdp"
        android:background="#0396AB"
        android:text="SUBMIT"
        android:layout_marginBottom="@dimen/_40sdp"
        android:fontFamily="@font/segoeuiregular"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginRight="@dimen/_11sdp"
        android:textColor="@color/white"/>






</RelativeLayout>