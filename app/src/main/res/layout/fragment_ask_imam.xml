<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >




    <android.support.v7.widget.CardView
        android:id="@+id/card_"
        app:cardElevation="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_89sdp">
        <RelativeLayout
            android:id="@+id/txt_layout"
            android:background="#0396AB"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/AskImAMDAte"
                android:fontFamily="@font/segoeuiregular"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:textAlignment="center"
                android:textColor="@color/white"/>


            <TextView
                android:layout_below="@id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 jumadal Ula 1440 AH"
                android:fontFamily="@font/segoeuiregular"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textAlignment="center"
                android:textColor="@color/white"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/msg_pic"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@id/card_"
        android:background="@drawable/ic_msg_send"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_80sdp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask Imam a question"
        android:layout_below="@id/msg_pic"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp"
        android:textColor="#00587A"
        android:layout_marginTop="@dimen/_5sdp"/>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#00587A"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_74sdp">

        <TextView
            android:id="@+id/msgtxt"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_12sdp"

            />

        <Button
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="#0396AB"
            android:text="SEND"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_alignParentEnd="true"


            />



    </RelativeLayout>



</RelativeLayout>