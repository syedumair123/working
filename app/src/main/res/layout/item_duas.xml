<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_8sdp">




    <!--show always layout-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp">

    <TextView
        android:id="@+id/Txt_Number_"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        />



    <TextView
        android:id="@+id/Txt_Title"
        android:layout_toEndOf="@id/Txt_Number_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Introduction"/>



    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_play_"/>










</RelativeLayout>

    <!--// hide always layout-->


    <RelativeLayout
        android:id="@+id/hide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<SeekBar
    android:id="@+id/Seekbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:max="150"
    />


        <TextView
            android:id="@+id/dua_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Seekbar"
            android:text="وَبِصَوْمِ غَدٍ نَّوَيْتُ مِنْ شَهْرِ رَمَضَانَ"
            android:textColor="#00587A"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dua_"
            android:text="I intend to keep the fast for tomorrow in the month of Ramadan "
            android:textColor="#00587A"
            android:textSize="@dimen/_14sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"

        />

















    </RelativeLayout>







</android.support.v7.widget.CardView>

