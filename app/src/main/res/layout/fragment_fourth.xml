<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_220sdp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/gredient">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/fourthfrag"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_jummah_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jummah"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#0396AB"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txt_jummah_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthfrag"

        android:layout_marginRight="@dimen/_12sdp">


        <TextView
            android:id="@+id/txt_1st_jummah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_toStartOf="@+id/txt_2nd_jummah"
            android:text="1st Jummu’ah"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_24sdp"

            />

        <TextView
            android:id="@+id/txt_2nd_jummah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Jummu’ah"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_26sdp"
            />




    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_jummah_num">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/RV_jummah_times"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/txt_jummah_num"/>


    </ScrollView>






</RelativeLayout>