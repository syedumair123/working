<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="1"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"/>


        <TextView
            android:id="@+id/txt_fajr_time_beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:text="05:45"

            android:layout_toStartOf="@+id/txt_zuhr_time_beginning"/>

        <TextView
            android:id="@+id/txt_zuhr_time_beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_toStartOf="@+id/txt_asr_time_beginning"
            android:text="05:45"
            android:layout_marginLeft="@dimen/_18sdp"
            />

        <TextView
            android:id="@+id/txt_asr_time_beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_toStartOf="@+id/txt_maghrib_time_beginning"
            android:text="05:45"
            android:layout_marginLeft="@dimen/_22sdp"/>

        <TextView
            android:id="@+id/txt_maghrib_time_beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_toStartOf="@+id/txt_isha_time_beginning"
            android:text="05:45"
            android:layout_marginLeft="@dimen/_20sdp"

            />

        <TextView
            android:id="@+id/txt_isha_time_beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:45"
            android:textSize="@dimen/_12sdp"
            android:textColor="#00587A"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/_20sdp"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/layout"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        ></View>



</RelativeLayout>
